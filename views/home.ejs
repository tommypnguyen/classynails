    <script>
      //Initialize and add the map
      function initMap() {
        //Location of Classy Nails
        var cn = {lat:38.4293334 , lng:-122.7427741};
        //Map, centered at Classy Nails
        var map = new google.maps.Map(
          document.getElementById('map'), {zoom: 16, center: cn});
        //infoWindow w/ Address
        var infowindow = new google.maps.InfoWindow({
          content: "<strong>Classy Nails</strong> <br>"+
                        "711 Stony Point Rd #13A <br>"+
                        "Santa Rosa, CA 95407<br>"
        })
        //Marker, positioned at Classy Nails
        var marker = new google.maps.Marker({position: cn, map:map});
        //Allows infowindow to be opened on click
        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });
        //Opens infowindow on marker on load
        infowindow.open(map, marker);
      }
    </script>
 
  
